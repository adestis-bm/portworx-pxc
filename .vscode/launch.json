    "version": "0.2.0",
    "configurations": [
        {
            "name": "pxc version",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceRoot}/pxc",
            "env": {
                "PXC_KUBECTL_PLUGIN_MODE": "true",
                "KUBECONFIG": "${workspaceRoot}/kubeconfig-all.conf"
            },
            "args": [
                "version"
            ]
        },
        {
            "name": "pxc list-by-context",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}",
            "env": {
                "PXC_KUBECTL_PLUGIN_MODE": "true",
                "KUBECONFIG": "${workspaceRoot}/kubeconfig-all.conf"
            },
            "args": [
                "cluster",
                "list-by-context"
            ]
        }
    ]
}